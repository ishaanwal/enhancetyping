# App
APP_URL=https://www.enhancetyping.com
NODE_ENV=development
DEMO_MODE=true
STRICT_PRODUCTION_CHECKS=false

# Database (required)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/enhancetyping

# Auth (required for NextAuth, but providers are optional)
NEXTAUTH_URL=https://www.enhancetyping.com
NEXTAUTH_SECRET=replace_with_any_random_long_string_for_local

# Optional: Google OAuth (leave blank for demo mode)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Optional: Email magic links (leave blank for demo mode)
EMAIL_FROM=noreply@enhancetyping.com
RESEND_API_KEY=

# Admin
ADMIN_EMAILS=you@example.com

# Stripe (leave blank for demo mode; add later)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PRICE_ID_MONTHLY=
STRIPE_PRICE_ID_YEARLY=
